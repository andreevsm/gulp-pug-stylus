@charset "UTF-8";
nav
	width 250px
	min-width 250px
	height 100%
	position fixed
	top 0
	bottom 0
	margin 0
	left -250px
	-webkit-transition left 0.3s
	-moz-transition left 0.3s
	transition left 0.3s
	background #00152c
	z-index 2000
	a 
		display inline-block
		position relative
		font-size 1.2em
		color #dadada
		width 100%
		text-decoration none
		-webkit-transition: width .5s ease
		-moz-transition: width .5s ease
		transition: width .5s ease

.nav-toggle
	position absolute
	left 250px
	top 0.3em
	padding 0.5em
	color #58b5fc
	cursor pointer
	font-size 1.5em
  line-height 1
	z-index 2001
	-webkit-transition color .25s ease-in-out
	-moz-transition color .25s ease-in-out
	transition: color .25s ease-in-out

.nav-toggle:after
	content '\2630'
	text-decoration none

.nav-toggle:hover
	color #1478c4




ul
	display block
  margin 0
  padding 0
  list-style none

nav > ul > li
	line-height 2.5
	opacity 0
	-webkit-transform translateX(-50%)
	-moz-transform translateX(-50%)
	-ms-transform translateX(-50%)
	transform translateX(-50%)
	-webkit-transition opacity .5s .1s
	-webkit-transform .5s .1s
	-moz-transition opacity .5s .1s
	-moz-transform .5s .1s
	-ms-transition opacity .5s .1s
	-ms-transform .5s .1s
	transition opacity .5s .1s
	transform .5s .1s

.wrapper
	line-height 50px
	margin-top 120px

	ul li:active
		border-left 6px solid #58b5fc
		-webkit-transition: border-left .5s ease-in-out
		-moz-transition: border-left .5s ease-in-out
		transition: border-left .5s ease-in-out
		transform translate(14px) scale(1.1)
		a
			color #fff
			margin-left 35px
			-webkit-transition margin-left .5s ease-in-out
			-moz-transition margin-left .5s ease-in-out
			transition margin-left .5s ease-in-out

	ul li:hover
		border-left 6px solid #58b5fc
		-webkit-transition border-left .5s ease
		-moz-transition border-left .5s ease
		transition border-left .5s ease
		transform translate(14px) scale(1.1)
		a
			color #fff
			margin-left 35px
			-webkit-transition: margin-left .5s ease-in-out
			-moz-transition: margin-left .5s ease-in-out
			transition: margin-left .5s ease-in-out

ul
	padding 0
	list-style-type none
	li
		height 45px
		a
			margin-left 30px
			color #58b5fc
			text-decoration none
			span
				padding-left 15px
				font-family: 'Lato', sans-serif;
				font-size 13px

[id='nav-toggle']
	position absolute
	display none

[id='nav-toggle']:checked ~ nav > .nav-toggle
	left auto
  right 2px
	top 1em

[id='nav-toggle']:checked ~ nav
	left 0
	-webkit-box-shadow: 10px 0px 40px 0px rgba(0,0,0,0.1);
	-moz-box-shadow: 10px 0px 40px 0px rgba(0,0,0,0.1);
	box-shadow: 10px 0px 40px 0px rgba(0,0,0,0.1);
	overflow-y auto

[id='nav-toggle']:checked ~ main > article
	-webkit-transform: translateX(250px)
	-moz-transform: translateX(250px)
	transform: translateX(250px)

[id='nav-toggle']:checked ~ nav > .nav-toggle:after
	content: '\2715'
	margin-left 196px
	margin-bottom 3px