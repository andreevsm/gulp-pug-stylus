mixin content()
	.content
		div.title DASHBOARD

		div(class="content statistic-blocks")
			div(class="block order")
				i(class="fa fa-archive fa-2x" aria-hidden="true")
				span#count 220
				div.label
					label TOTAL ORDER
			div(class="block completed-order")
				i(class="fa fa-check-circle-o fa-2x" aria-hidden="true")
				span#count 180
				div.label
					label TOTAL COMPLETED ORDER
			div(class="block pending-order")
				i(class="fa fa-pencil-square-o fa-2x" aria-hidden="true")
				span#count 20
				div.label
					label TOTAL PENDING ORDER
			div(class="block canseled-order")
				i(class="fa fa-line-chart fa-2x" aria-hidden="true")
				span#count 20
				div.label
					label TOTAL CANSELED ORDER

		div(class="line-charts")
			div(class="chart-block" style="position: relative")
				span#total_sales TOTAL SALES
				div.sort
					span#month This month
					i(class="fa fa-angle-down fa-lg", aria-hidden="true")
				canvas#totalSales
			div(class="chart-block" style="position: relative")
				span#total_sales NEW USERS
				div.sort
					span#month This month
					i(class="fa fa-angle-down fa-lg", aria-hidden="true")
				canvas#newUsers
				
		div(class="other-charts")
			div(class="chart-block")
				span#total_sales ORDER BREAKDOWN
				div.sort
					span#month This month
					i(class="fa fa-angle-down fa-lg", aria-hidden="true")
				canvas#orderBreakdown
			div(class="chart-block")
				span#total_sales COUPON USAGE
				div.sort
					span#month This month
					i(class="fa fa-angle-down fa-lg", aria-hidden="true")
				canvas#couponUsage